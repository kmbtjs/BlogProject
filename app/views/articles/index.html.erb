<h1>Articles</h1>
Article count: <%= Article.public_count %>
<ul>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li>
                <%= link_to article.title, article %>
            </li>
        <% end %>
    <% end %>
</ul>

<%= link_to "Add New Article", new_article_path %>
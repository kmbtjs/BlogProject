<header class="absolute text-3xl font-bold mt-3 ml-8">Articles</header>
<div class="relative pt-14 pl-4 flex-col">
    Article Count: <%= Article.public_count %>
        <div class="my-2">
        <%= form_with url: bulk_destroy_articles_path, method: :delete do |form| %>
            <ul>
            Article Title
                <% @articles.each do |article| %>
                    <% unless article.archived? %>
                        <li>
                        <input class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm 
                                      bg-white checked:bg-blue-600 checked:border-blue-600 
                                      focus:outline-none transition duration-200 my-1 align-top 
                                      bg-no-repeat bg-center bg-contain float-left cursor-pointer mr-2" 
                                      type="checkbox" value="<%= article.id %>" id="checkbox1" name="collection_ids[]" />
                                      <%= link_to article.title, article %>
                        </li>
                    <% end %>
                <% end %>
            </ul>
        </div>
        <div class="flex flex-row">
        <div class="bg-gray-500 hover:bg-gray-600 
        focus-outline-none focus:ring focus:ring-gray-300 
        rounded-full text-m text-gray-100 ml-1.5 p-2.5 px-3">
    <%= link_to "Delete Articles", articles_path, data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you Sure?"} %><%= form.submit %></div>
        <% end %>
        <div>
        <button class="bg-gray-500 hover:bg-gray-600 
        focus:outline-none focus:ring focus:ring-gray-300 
        rounded-full text-m text-gray-100 ml-1.5 p-2.5 px-3">
    <%= link_to "Add New Article", new_article_path %></button></div>
        </div>
</div>
